{
  "name": "@wqyjh/markdownify",
  "version": "1.1.0",
  "description": "TypeScript port of python-markdownify - Convert HTML to Markdown",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "browser": "./dist/browser/markdownify.min.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    },
    "./browser": {
      "default": "./dist/browser/markdownify.min.js"
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && npm run build:types && npm run build:cjs && npm run build:esm && npm run build:browser",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist/types",
    "build:cjs": "tsc --module commonjs --target es2018 --outDir dist/cjs",
    "build:esm": "tsc -p tsconfig.esm.json --outDir dist/esm",
    "build:browser": "webpack --config webpack.config.cjs --mode production",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "keywords": [
    "markdown",
    "html",
    "converter",
    "typescript",
    "browser",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "ts-loader": "^9.5.1"
  },
  "dependencies": {
    "htmlparser2": "^10.0.0"
  }
}