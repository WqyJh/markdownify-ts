{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "es2018",
    "outDir": "./dist/esm",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "noEmit": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}